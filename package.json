{
  "name": "@feng3d/webgpu",
  "version": "0.0.7",
  "description": "webgpu渲染库",
  "homepage": "https://feng3d.com/webgpu/",
  "author": "feng",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "module": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "scripts": {
    "dev": "cd examples && npm run dev",
    "clean": "rimraf \"{lib,dist,public}\"",
    "build": "vite build",
    "test": "vitest",
    "types": "tsc",
    "watch": "tsc -w",
    "lint": "eslint . --ext .js,.ts --max-warnings 0",
    "lintfix": "npm run lint -- --fix",
    "docs": "typedoc && cd examples && vite build --outDir ../public",
    "upload_oss": "npm run docs && feng3d-cli oss_upload_dir",
    "release": "npm run clean && npm run lint && npm run build && npm run docs && npm run types && npm publish",
    "prepublishOnly": "node scripts/prepublish.js",
    "postpublish": "node scripts/postpublish.js"
  },
  "repository": {
    "type": "git",
    "url": "https://gitee.com/feng3d/webgpu.git"
  },
  "files": [
    "dist/",
    "lib"
  ],
  "workspaces": [
    ".",
    "./examples",
    "packages/*",
    "packages/*/examples"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@feng3d/cli": "^0.0.19",
    "@typescript-eslint/eslint-plugin": "8.32.1",
    "@typescript-eslint/parser": "8.32.1",
    "cross-env": "7.0.3",
    "eslint": "9.26.0",
    "globals": "^14.0.0",
    "rimraf": "6.0.1",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.4",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.3.5",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "@feng3d/reactivity": "^1.0.6",
    "@feng3d/render-api": "0.0.7",
    "@feng3d/watcher": "^0.8.14",
    "@webgpu/types": "0.1.60",
    "wgsl_reflect": "^1.2.1"
  }
}