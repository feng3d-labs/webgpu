{
  "name": "@feng3d/webgpu",
  "version": "0.0.5",
  "description": "webgpu渲染库",
  "homepage": "https://feng3d.com/webgpu/",
  "author": "feng",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "module": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "scripts": {
    "dev": "cd examples && npm run dev",
    "clean": "rimraf \"{lib,dist,public}\"",
    "build": "vite build",
    "test": "vitest",
    "types": "tsc",
    "watch": "tsc -w",
    "lint": "eslint --ext .js --ext .ts src test --ignore-path .gitignore --max-warnings 0",
    "lintfix": "npm run lint -- --fix",
    "docs": "typedoc && cd examples && vite build --outDir ../public",
    "release": "npm run clean && npm run lint && npm run docs && npm run build && npm run types && npm publish",
    "prepublishOnly": "node scripts/prepublish.js",
    "postpublish": "node scripts/postpublish.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/feng3d-labs/webgpu.git"
  },
  "files": [
    "dist/",
    "lib"
  ],
  "workspaces": [
    ".",
    "./examples",
    "packages/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "8.32.0",
    "@typescript-eslint/parser": "8.32.0",
    "cross-env": "7.0.3",
    "eslint": "9.26.0",
    "rimraf": "6.0.1",
    "tslib": "^2.8.1",
    "typedoc": "^ 0.28.4",
    "typescript": "5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "@feng3d/event": "^0.8.4",
    "@feng3d/render-api": "0.0.4",
    "@webgpu/types": "0.1.49",
    "wgsl_reflect": "^1.0.16",
    "@feng3d/reactivity": "^1.0.5"
  }
}