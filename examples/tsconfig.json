{
	"compilerOptions": {
		"target": "ES2015",
		"module": "esNext",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"sourceMap": true,
		"experimentalDecorators": true,
		"declaration": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"noEmit": true,
		"lib": [
			"ES2015",
			"es2020",
			"dom"
		]
	},
	"include": [
		"src/**/*.ts",
	]
}